@model List<TextElement>
@{
    ViewData["Title"] = "Catering";
}

<div class="text-center">
    <!--Make Title "Zinjaro" Font-->
    <h1 class="display-3 title">CATERING</h1>
    <div class="container">
        <div class="row">
            @if(Model.Count > 0)
            {
                foreach (TextElement col in Model)
                {
                <div class="col-lg">
                    <h1 class="display-6 title">@col.Name</h1>
                    <p class="bodyText">
                        @{ string[] paragraphs = col.Content.Split("\n");}
                        @foreach(string par in paragraphs)
                        {
                            <br/>@par
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-controller="Admin" asp-route-id="@col.TextElementId"><i class="fa-regular fa-pen-to-square"></i></a>
                        }
                    </p>
                </div>
                }
            }
        </div>
        <!--Row of placeholder images-->
        <div class="row">
            <div class="col-md my-3 m-md-0">
                <img src="/pics/DesertBowl.png" class="img-fluid w-100" alt="Desert Bowl">
            </div>
            <div class="col-md my-3 m-md-0">
                <img src="/pics/ElectrolyteRefresh.png" class="img-fluid w-100" alt="Electrolyte Refresh Drink">
            </div>
            <div class="col-md my-3 m-md-0">
                <img src="/pics/GardenWrap.png" class="img-fluid w-100" alt="Vegan Garden Wrap">
            </div>
        </div>
    </div>
</div>