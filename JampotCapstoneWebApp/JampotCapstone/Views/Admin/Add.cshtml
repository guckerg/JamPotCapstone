@model JampotCapstone.Models.File

@{
    ViewBag.Title = "Add New Photo";
}

<h2>Add New Photo</h2>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-action="Add">
    <input type="hidden" asp-for="FileID" value="0"/>
    <div class="row mb-3">
        <label asp-for="FileName" class="col-sm-2 col-form-label">File Path</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="FileName" placeholder="/pics/"/>
        </div>
    </div>
    <input type="hidden" asp-for="ContentType" value="image/png"/>
    <button type="submit" class="btn btn-primary col-2">Save Changes</button>
    <a asp-action="Index" class="btn btn-danger col-2">Cancel</a>
</form>
