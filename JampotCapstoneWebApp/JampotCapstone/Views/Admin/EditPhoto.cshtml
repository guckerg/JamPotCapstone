@using File = JampotCapstone.Models.File
@model EditViewModel
@{
    ViewBag.Title = "Change Photo";
}

<h2>Change Photo</h2>
<form method="post" asp-action="EditPhoto">
    <div class="row p-2">
        <label asp-for="Photos" class="col-form-label col-md-3 mb-3">Page</label>
        <div class="col-md-3">
            <select asp-for="NewPhotoId" class="form-select">
                <option value="">select a page</option>
                @foreach (File f in Model.Photos)
                {
                    <option value="@f.FileID">@f.FileName</option>
                }
            </select>
        </div>
    </div>
    <input type="hidden" asp-for="CurrentPage" value="@Model.CurrentPage"/>
    <input type="hidden" asp-for="OldPhotoId" value="@Model.OldPhotoId"/>
    <button type="submit" class="btn btn-primary col-2">Save Changes</button>
    <a asp-action="Index" class="btn btn-danger col-2">Cancel</a>
</form>
