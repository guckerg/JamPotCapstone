@{
    ViewBag.Title = "Add New Photo";
}

<h2>Add New Photo</h2>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form enctype="multipart/form-data" method="post" asp-action="AddPhoto">
    <div class="row mb-3">
        <label for="file" class="col-sm-2 col-form-label">New File</label>
        <div class="col-sm-10">
            <input type="file" class="form-control" name="newFile" id="file" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary col-2">Save Changes</button>
    <a asp-action="Index" class="btn btn-danger col-2">Cancel</a>
</form>
