@model Product

@{
    ViewBag.Title = "Edit Product";
}

<h2>Edit Product</h2>
<span class="text-danger">@TempData["Message"]</span>
<form method="post" asp-action="ProductEdit">
    <input type="hidden" asp-for="ProductId" />
    <div class="row mb-3">
        <label asp-for="ProductName" class="col-sm-2 col-form-label">Product Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="ProductName" value="@Model.ProductName">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="ProductPrice" class="col-sm-2 col-form-label">Product Price</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="ProductPrice" value="@Model.ProductPrice">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="ProductIngredients" class="col-sm-2 col-form-label">Product Ingredients</label>
        <div class="col-sm-10">
            <textarea class="form-control" asp-for="ProductIngredients" rows="10">@Model.ProductIngredients</textarea>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="ProductPhoto" class="col-sm-2 col-form-label">Product Photo</label>
        <div class="col-sm-10">
            <input type="image" class="form-control" asp-for="ProductPhoto" value="@Model.ProductPhoto">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="ProductCategory" class="col-sm-2 col-form-label">ProductCategory</label>
        <div class="col-sm-10">
            <input type="text" asp-for="ProductCategory" value="@Model.ProductCategory" />
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Tags" class="col-sm-2 col-form-label">Tags</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Tags" value="@Model.Tags" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary col-2">Save Changes</button>
    <a asp-action="Index" class="btn btn-danger col-2">Cancel</a>
</form>
<div>
    <img src="" />
</div>
